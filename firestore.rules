rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth.uid != null;
    }

    match /Markets/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /Menu/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /Orders/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    match /Stores/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}